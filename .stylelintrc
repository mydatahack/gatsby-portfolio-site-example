{
  "plugins": [
    "stylelint-order"
  ],
  "processors": [
    "stylelint-processor-styled-components"
  ],
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-styled-components",
    "stylelint-config-idiomatic-order"
  ],
  "rules": {
    "declaration-property-unit-allowed-list": {
      "font-size": "rem",
      "line-height": "rem",
      "/^animation/": "s",
      "width": ["%", "px"],
      "height": ["%", "px"]
    }
  }
}
